<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:id="@+id/doubleEqTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title2"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/doubleEq_coefficient_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/a" />

    <EditText
        android:id="@+id/doubleEq_coefficient_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/b" />

    <EditText
        android:id="@+id/doubleEq_coefficient_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/c" />

    <Button
        android:id="@+id/solveDoubleEq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="solveDoubleEquasion"
        android:text="@string/calculate" />

    <TextView
        android:id="@+id/doubleEqResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/normalEqTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/normalEq_coefficient_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/a" />

    <EditText
        android:id="@+id/normalEq_coefficient_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/b" />

    <EditText
        android:id="@+id/normalEq_coefficient_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/c" />

    <Button
        android:id="@+id/solveNormalEq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="solveEquation"
        android:text="@string/calculate" />

    <TextView
        android:id="@+id/normalEqResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp" />

</LinearLayout>
